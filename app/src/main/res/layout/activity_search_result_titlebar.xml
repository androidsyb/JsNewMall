<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/title_orange"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="44dp"
        android:paddingLeft="10dp"
        android:orientation="horizontal">
        <!--返回按钮-->
        <LinearLayout
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="40dp">
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/backicon_a"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout

        android:id="@+id/tv_search_address_again"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="6dp"
        android:layout_width="0dp"
        android:layout_weight="8"
        android:layout_height="30dp"
        android:background="@drawable/travel_select_address_shape">
        <TextView
            android:layout_marginLeft="35dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_search_a"
            android:gravity="center_horizontal"
            android:textSize="12sp"
            android:textColor="@color/white"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_title_more"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/icon_search_more" />
    </LinearLayout>

</LinearLayout>
