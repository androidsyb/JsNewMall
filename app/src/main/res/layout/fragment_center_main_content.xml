<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundcolor">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@color/title_orange">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:src="@mipmap/icon_background_img_center"
            android:layout_alignParentBottom="true"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical">

        <!--第一部分设置标记-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_shezhi"
                android:layout_alignParentRight="true"
                android:layout_width="25dp"
                android:layout_marginRight="15dp"
                android:layout_height="25dp"
                android:src="@mipmap/icon_shezhi"/>
        </RelativeLayout>




        <!--第二部分头像-->


            <LinearLayout
                android:layout_marginLeft="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/center_img_touxiang"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/icon_touxiang"/>

               <LinearLayout
                   android:id="@+id/ln_center_weidenglu"
                   android:padding="15dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@color/white"
                       android:textSize="18sp"
                       android:text="未登录"/>
               </LinearLayout>


                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/rl_name_msg"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_marginTop="15dp"
                        android:layout_alignParentTop="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:text="名字"/>
                    <TextView
                        android:id="@+id/tv_huiyuanmsg"
                        android:layout_marginBottom="15dp"
                        android:layout_alignParentBottom="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:text="会员信息"/>

                </RelativeLayout>



            </LinearLayout>




        <!--第三部分优惠券-->
        <LinearLayout
            android:paddingTop="15dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <RelativeLayout
                android:id="@+id/center_rl_youhuiquan"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="18dp"
                    android:paddingBottom="2dp"
                    android:src="@mipmap/icon_youhuiquan"/>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:text="优惠券"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp">

                    <TextView
                        android:id="@+id/tv_center_youhuiquan"
                        android:text="0张"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </RelativeLayout>
            <!--线 垂直 白色-->
            <LinearLayout
                android:layout_width="1dp"
                android:layout_marginBottom="2dp"
                android:layout_height="match_parent"
                android:background="@color/white"/>

            <RelativeLayout
                android:id="@+id/center_rl_jifen"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <ImageView
                        android:layout_marginLeft="15dp"
                        android:layout_width="20dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/icon_jifen"/>
                    <TextView
                        android:text="积分"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>


                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_center_jifen"
                        android:text="0分"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    </RelativeLayout>


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="10dp"
                        android:paddingBottom="5dp"
                        android:background="@color/white"
                        android:layout_marginTop="10dp">
                    <!--4个选项-->
                        <include layout="@layout/fragment_center_view_second"/>

                        <!--xian-->
                         <LinearLayout
                                android:layout_marginTop="8dp"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:orientation="horizontal"
                                android:background="@color/second_bgcolor"
                                android:layout_marginLeft="15dp"/>

                    <RelativeLayout
                        android:id="@+id/rl_center_a"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/center_img_a"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentBottom="true"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/icon_shoucang"/>
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/center_img_a"
                            android:layout_alignParentBottom="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的收藏"
                            android:textColor="@color/dark_6"
                            android:textSize="14sp"/>

                        <ImageView
                            android:src="@mipmap/icon_xiangyou"
                            android:layout_width="15dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>


                    <!--xian-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:orientation="horizontal"
                        android:background="@color/second_bgcolor"
                        android:layout_marginLeft="15dp"/>





                    <RelativeLayout
                        android:id="@+id/rl_center_b"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/center_img_b"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentBottom="true"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/icon_history"/>
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/center_img_b"
                            android:layout_alignParentBottom="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="浏览历史"
                            android:textColor="@color/dark_6"
                            android:textSize="14sp"/>

                        <ImageView
                            android:src="@mipmap/icon_xiangyou"
                            android:layout_width="15dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>









                    <!--xian-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:orientation="horizontal"
                        android:background="@color/second_bgcolor"
                        android:layout_marginLeft="15dp"/>





                    <RelativeLayout
                        android:id="@+id/rl_center_c"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/center_img_c"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentBottom="true"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/icon_myguwen"/>
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/center_img_c"
                            android:layout_alignParentBottom="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的顾问"
                            android:textColor="@color/dark_6"
                            android:textSize="14sp"/>

                        <ImageView
                            android:src="@mipmap/icon_xiangyou"
                            android:layout_width="15dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/rl_center_d"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/center_img_d"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/icon_chengzhangzhi"/>
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/center_img_d"
                        android:layout_alignParentBottom="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的成长值"
                        android:textColor="@color/dark_6"
                        android:textSize="14sp"/>

                    <ImageView
                        android:src="@mipmap/icon_xiangyou"
                        android:layout_width="15dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>



                <!--xian-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:orientation="horizontal"
                    android:background="@color/second_bgcolor"
                    android:layout_marginLeft="15dp"/>



                <RelativeLayout
                    android:id="@+id/rl_center_e"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/center_img_e"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/icon_lvkeziliang"/>
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/center_img_e"
                        android:layout_alignParentBottom="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="常用旅客资料"
                        android:textColor="@color/dark_6"
                        android:textSize="14sp"/>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/icon_xiangyou"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>







            </LinearLayout>




        </LinearLayout>
    </ScrollView>
</LinearLayout>
