<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/travel_title_bar">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:id="@+id/tv_routedetail_a"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="行程介绍"
                android:textColor="@color/title_orange"/>
            <ImageView
                android:id="@+id/img_routedetail_a"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/title_orange"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="@color/backgroundcolor"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textColor="@color/dark_3"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:id="@+id/tv_routedetail_b"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="产品特色"/>
            <ImageView
                android:id="@+id/img_routedetail_b"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/travel_title_bar"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="@color/backgroundcolor"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textColor="@color/dark_3"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:id="@+id/tv_routedetail_c"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="预订须知"/>
            <ImageView
                android:id="@+id/img_routedetail_c"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/travel_title_bar"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
