<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="140dp">
        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/network_travel"
            android:layout_width="match_parent"
            android:layout_height="140dp" />

    <RelativeLayout
        android:id="@+id/ll_sixth_layout"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        >

        <!--左下价格-->
      <LinearLayout
          android:alpha="0.8"
          android:padding="8dp"
          android:background="@drawable/home_sixth_content_shape"
          android:layout_alignParentLeft="true"
          android:layout_alignParentBottom="true"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="12dp"
          android:layout_marginLeft="15dp"
          android:gravity="center_horizontal">
          <TextView
              android:layout_gravity="center_vertical"
              android:text="ssss"
              android:id="@+id/tv_sixth_content_a"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="12sp"
              android:textColor="@color/white"/>
      </LinearLayout>


       <!--右下时间-->
        <LinearLayout
            android:id="@+id/ll_sixth_layout_b"
            android:alpha="0.8"
            android:background="@drawable/home_sixth_content_shape_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="12dp"
            android:padding="8dp">
            <TextView
                android:id="@+id/tv_sixth_content_b"
                android:text="66666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="10sp"/>
        </LinearLayout>


        <!--右下地址名-->
        <LinearLayout
            android:id="@+id/ll_sixth_layout_c"
            android:alpha="0.8"
            android:background="@drawable/home_sixth_content_shape_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/ll_sixth_layout_b"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="12dp"
            android:padding="8dp">
            <TextView
                android:id="@+id/tv_sixth_content_c"
                android:text="66666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="10sp"/>
        </LinearLayout>
        <!--右下跟团游-->
        <LinearLayout

            android:alpha="0.8"
            android:background="@drawable/home_sixth_content_shape_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:layout_toLeftOf="@id/ll_sixth_layout_c"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="12dp"
            android:padding="8dp">
            <TextView
                android:id="@+id/tv_sixth_content_d"
                android:text="66666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="10sp"/>
        </LinearLayout>
    </RelativeLayout>

    </FrameLayout>

    <!-- 介绍内容-->
    <LinearLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp">
        <TextView
            android:text="5555"
            android:maxLines="1"
            android:id="@+id/tv_sixth_content_e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_3"
            android:singleLine="true"
            android:textSize="16sp"/>
        <TextView
            android:text="6666"
            android:maxLines="1"
            android:singleLine="true"
            android:id="@+id/tv_sixth_content_f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_9"
            android:textSize="12sp"/>
    </LinearLayout>

    <!-- 类别如亲子。。-->
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_sixth_content_g"
            android:textColor="@color/home_button_a"
            android:textSize="10sp"
            android:padding="5dp"
            android:text="亲子"
            android:background="@drawable/home_sixth_content_shape_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_sixth_content_h"
            android:textColor="@color/home_button_a"
            android:textSize="10sp"
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:text="kkoaksof"
            android:background="@drawable/home_sixth_content_shape_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_sixth_content_i"
            android:textColor="@color/home_button_a"
            android:textSize="10sp"
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:text="kkoaksof"
            android:background="@drawable/home_sixth_content_shape_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/backgroundcolor"/>




</LinearLayout>
