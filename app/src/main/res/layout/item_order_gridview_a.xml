<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.example.host.jsnewmall.view.DashedLineView
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_height="2dp"
        app:lineColor="@color/dark_9"
        app:dashOrientation="0"
        app:lineHeight="2dp"
        app:lineWidth="4dp"
        app:dashWidth="3dp"/>
    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_order_money_first_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/dark_6"
            android:layout_alignParentLeft="true"
            android:text="200元出境游优惠券（满3500使用）"/>
        <ImageView
            android:id="@+id/img_money_choose_a"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_circle_unchecked"/>


    </RelativeLayout>
    

    

</LinearLayout>
