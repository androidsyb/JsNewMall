<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/white">
    <include
        android:id="@+id/rl_ship_title"
        layout="@layout/fragment_dingz_titlebar"/>
    <ScrollView
        android:layout_below="@+id/rl_ship_title"
        android:id="@+id/activity_ship_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingBottom="50dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/viewpager_view"/>
        <include layout="@layout/activity_ship_first_view"/>


    </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:background="@color/title_orange"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/tv_submit_ship"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ship_b"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </RelativeLayout>


</RelativeLayout>
