<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/title_orange">

    <LinearLayout
        android:id="@+id/iv_back"
        android:layout_alignParentLeft="true"
        android:layout_width="40dp"
        android:paddingLeft="15dp"
        android:layout_height="40dp">
        <ImageView
            android:layout_marginTop="15dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/backicon_a"/>

    </LinearLayout>



    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_title_name_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/travel_content_l"
            android:textColor="@color/white"
            android:textSize="16sp"/>
    </LinearLayout>



    <ImageView
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/img_title_message"
        android:id="@+id/img_title_call"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@mipmap/icon_title_call_b"/>

    <ImageView
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/img_title_message"
        android:layout_width="25dp"
        android:layout_height="25dp" />


</RelativeLayout>
