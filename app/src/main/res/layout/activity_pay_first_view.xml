<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pay_first_view_bgcolor"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="@color/pay_success"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_gravity="center">
        <TextView

            android:gravity="center"
            android:id="@+id/tv_pay_content_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/pay_content_a"
            android:textColor="@color/white"/>
        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/tv_pay_content_b"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="@string/pay_content_b"
            android:textColor="@color/white"/>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center">
        <ImageView
            android:id="@+id/img_success"
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/icon_pay_success"/>
        
    </LinearLayout>


</LinearLayout>
