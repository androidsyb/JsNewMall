<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/title_orange">
    <LinearLayout
        android:id="@+id/ln_travel_title_a"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:paddingLeft="15dp"
        android:orientation="horizontal">
        <!--返回按钮-->
        <LinearLayout
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="40dp">
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/backicon_a"/>
        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_toRightOf="@id/ln_travel_title_a"
            android:id="@+id/tv_search_address"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="6dp"
            android:layout_width="205dp"
            android:layout_height="30dp"
            android:background="@drawable/travel_select_address_shape">
            <TextView
                android:layout_marginLeft="35dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_search_a"
                android:gravity="center_horizontal"
                android:textSize="12sp"
                android:textColor="@color/white"/>
        </LinearLayout>
        <ImageView
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tv_search_address"
            android:id="@+id/img_title_call"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/icon_title_call_b"/>

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/img_title_call"
            android:id="@+id/img_title_message"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/icon_title_message_b" />



</RelativeLayout>
