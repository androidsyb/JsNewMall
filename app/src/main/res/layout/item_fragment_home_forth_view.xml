<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <LinearLayout
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@drawable/selector_gridview_rectangle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">
    <TextView
        android:id="@+id/tv_forth_content_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_6"
        android:textSize="12sp"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/tv_forth_content_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_9"
        android:textSize="10sp"
        android:layout_gravity="center_horizontal"/>
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/img_forth_view"
        android:layout_gravity="center_horizontal"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    </LinearLayout>
</LinearLayout>
